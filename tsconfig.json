{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "importHelpers": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "skipLibCheck": true
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/*.js", "src/**/*.js"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/node_modules/*"]
}
